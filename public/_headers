/*
  # --- Security ---
  # Use CSP (with frame-ancestors) instead of X-Frame-Options so you can embed DocuSign/Wistia/Calendly.
  Content-Security-Policy: default-src 'self';
    base-uri 'self';
    object-src 'none';
    frame-ancestors 'self';
    upgrade-insecure-requests;
    form-action 'self' https://app.docusign.com https://*.docusign.net;
    img-src 'self' https: data: blob:;
    media-src 'self' https: data:;
    font-src 'self' https://fonts.gstatic.com data:;
    style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://assets.calendly.com;
    script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: https://assets.calendly.com https://*.wistia.com https://*.wistia.net https://app.docusign.com https://*.docusign.net;
    connect-src 'self' ws: wss: https://api.calendly.com https://*.wistia.com https://*.wistia.net https://app.docusign.com https://*.docusign.net https://api.openai.com;
    frame-src 'self' https://calendly.com https://assets.calendly.com https://*.wistia.com https://*.wistia.net https://app.docusign.com https://*.docusign.net

  # Strict transport (HSTS). Add "preload" only after validating at hstspreload.org and www subdomain is covered.
  Strict-Transport-Security: max-age=63072000; includeSubDomains

  # Old but still useful
  X-Content-Type-Options: nosniff
  Referrer-Policy: strict-origin-when-cross-origin

  # Feature/permission lockdown
  Permissions-Policy: camera=(), microphone=(), geolocation=(), fullscreen=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()

  # Don’t use X-Frame-Options because CSP frame-ancestors controls this and you need iframes for DocuSign/Calendly/Wistia
  # X-Frame-Options: DENY

  # Optional: staging “noindex” (comment out for production)
  # X-Robots-Tag: noindex, nofollow

  # Lock just the proposal page + subroutes
/mbfm
  Basic-Auth: mbfm:Revenue2025

