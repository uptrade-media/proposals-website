# Proposals Portal - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE
# ============================================
# Neon Postgres connection string
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# ============================================
# AUTHENTICATION
# ============================================
# JWT secret for signing tokens (use a strong random string)
AUTH_JWT_SECRET=your-256-bit-secret-key-here

# Supabase Auth
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Google OAuth credentials
GOOGLE_CLIENT_ID=xxxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxx

# ============================================
# EMAIL (RESEND)
# ============================================
# Resend API key for transactional emails
RESEND_API_KEY=re_xxxxx

# Email sender address (must be verified in Resend)
RESEND_FROM=Uptrade Media <portal@send.uptrademedia.com>

# Admin email for notifications
ADMIN_EMAIL=admin@uptrademedia.com

# ============================================
# SQUARE PAYMENTS
# ============================================
# Square access token (sandbox or production)
SQUARE_ACCESS_TOKEN=sq0atp-xxxxx

# Square location ID
SQUARE_LOCATION_ID=Lxxxxx

# Square environment (sandbox or production)
SQUARE_ENVIRONMENT=sandbox

# Square webhook signature key for verifying webhook events
SQUARE_WEBHOOK_SIGNATURE_KEY=xxxxx

# ============================================
# APPLICATION
# ============================================
# Base URL of your application
URL=http://localhost:8888

# Node environment
NODE_ENV=development

# ============================================
# SIGNAL AI API
# ============================================
# Signal API URL (NestJS service)
# Development: http://localhost:3001 (run Signal API with `pnpm dev`)
# Production: https://signal.uptrademedia.com (Render deployment)
SIGNAL_API_URL=http://localhost:3001

# VITE_ prefixed for frontend access (direct API calls)
VITE_SIGNAL_API_URL=http://localhost:3001

# Shared secret for Portal â†” Signal API authentication
SIGNAL_API_KEY=development-key-change-in-production

# ============================================
# PORTAL API (Messages, Engage, CRM, Analytics)
# ============================================
# Portal API URL (NestJS service for real-time features)
# Development: http://localhost:3002 (run Portal API with `pnpm dev`)
# Production: https://api.uptrademedia.com (Render deployment)
# 
# REQUIRED - Portal API handles (no Netlify fallback):
# - Messages (WebSocket real-time messaging)
# - Engage (live chat, popups, analytics)
# - CRM (prospects, calls, timeline, attribution)
# - Site Analytics (page views, sessions, web vitals)
VITE_PORTAL_API_URL=http://localhost:3002

# ============================================
# NETLIFY (Auto-populated in production)
# ============================================
# NETLIFY_DEV=true
# CONTEXT=dev

# VITE_ PREFIXED VARS (exposed to frontend)
# Square Application ID (public, safe for frontend)
VITE_SQUARE_APPLICATION_ID=sandbox-sq0idb-xxxxx
# Square Location ID (for payment form)
VITE_SQUARE_LOCATION_ID=Lxxxxx
# Square environment
VITE_SQUARE_ENVIRONMENT=sandbox
